<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/layoutAdapter"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_margin="10dp"
        android:backgroundTint="#CDDC39"
        app:cardCornerRadius="20dp">

        <!--
            <ImageView
            android:id="@+id/gambarBarber"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:autofillHints="ini gambar" />
            -->

        <TextView
            android:id="@+id/namaBarber"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="Judul Barber"
            android:textColor="#004B11"
            android:textSize="26sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/deksBarber"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="40dp"
            android:text="dekskripsi barber"
            android:textColor="#004B11"
            android:textSize="14sp" />

    </androidx.cardview.widget.CardView>

</LinearLayout>